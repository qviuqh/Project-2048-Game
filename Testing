import pygame, sys
from pygame.locals import *
from button import Button
from Display import main_game

pygame.init()

DISPLAYSURF = pygame.display.set_mode((450, 300))
pygame.display.set_caption('2048 Game')

Logo = pygame.image.load('image/Logo.png')
pygame.display.set_icon(Logo)

image01 = pygame.image.load('image/button/Untitled-3.png').convert_alpha()
rect01 = image01.get_rect()
rect01.center = (225, 100)

image02 = pygame.image.load('image/button/Untitled-3-01.png').convert_alpha()
rect02 = image02.get_rect()
rect02.center = (225, 100)

main = False 
main2 = False
temp = image01

while True:
    # PLAY_MOUSE_POS = pygame.mouse.get_pos()
    # PLAY_BACK = Button(image01, image02, (225, 150))
    
    if temp == image02:
        main = True
    
    DISPLAYSURF.fill((252, 250, 241))
    DISPLAYSURF.blit(temp, rect01)
    
    for event in pygame.event.get():
        if event.type == QUIT:
            pygame.quit()
            sys.exit()
        if event.type == MOUSEBUTTONDOWN and rect01.collidepoint(event.pos):
            # DISPLAYSURF.blit(image02, rect02)
            temp = image02
        else: temp = image01
    pygame.display.update()
    if main == True and temp == image01:
        pygame.time.delay(200)
        main_game()

